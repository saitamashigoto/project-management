        <column xsi:type="timestamp" name="deadline" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Deadline"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="SAITAMA_PROJECT_MANAGEMENT_PROJECT_PROJECT_POMODORO_RECORD_ID_SAITAMA_PROJECT_MANAGEMENT_PROJECT_PROMODORO_RECORD_ENTITY_ID"
