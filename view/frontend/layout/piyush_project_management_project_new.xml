<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <css src="Piyush_ProjectManagement::css/style.css"/>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Create New Project</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Piyush\ProjectManagement\Block\Project\NewBlock"
                name="project_management_new"
                template="Piyush_ProjectManagement::project/new.phtml"
                cacheable="false">
            </block>
        </referenceContainer>
    </body>
</page>
